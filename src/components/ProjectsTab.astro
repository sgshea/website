---
import ProjectCard from './ProjectCard.astro';

const projects = [
  {
    title: "Pollster",
    description: "A full-stack application for creating and managing polls in Sveltekit with a managed Supabase database for realtime updates.",
    tags: ["Sveltekit", "Supabase"],
    link: "https://github.com/sgshea/poll-svelte"
  },
  {
    title: "Sandengine",
    description: "High performance falling sand simulation with multithreading and rigid body physics using the Bevy engine in Rust.",
    tags: ["Rust", "Bevy"],
    demo: "https://sgshea.github.io/sandengine/",
    link: "https://github.com/sgshea/sandengine"
  },
  {
    title: "417 Language",
    description: "Simple expression based programming language and parser implementation in Rust created as a class project.",
    tags: ["Rust"],
    demo: "https://sgshea.github.io/417lang/",
    link: "https://github.com/sgshea/417lang"
  },
  {
    title: "Portfolio Generator",
    description: "Generate customizable developer portfolios with minimal configuration.",
    tags: ["TypeScript", "Next.js", "TailwindCSS"],
    link: "https://github.com/sgshea/portfolio-generator"
  }
];
---

<div class="projects-content">
  <h2> My Projects</h2>

  <div class="projects-grid">
    {projects.map(project => (
      <ProjectCard
        title={project.title}
        description={project.description}
        tags={project.tags}
        demo={project.demo}
        link={project.link}
      />
    ))}
  </div>
</div>

<style>
  .projects-content {
    padding: 0 1rem;
  }

  h2 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px dashed var(--border);
    padding-bottom: 0.5rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }
</style>
